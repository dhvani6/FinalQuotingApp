    <strong>First Name:</strong>
    <%= form.text_field :customer_fname %>
  </div>

  <div class="field">
    <strong>Last Name:</strong>
    <%= form.text_field :customer_lname %>
  </div>

  <div class="field">
    <strong>Phone Number:</strong>
    <%= form.text_field :customer_phone %>
  </div>

  <div class="field">
    <strong>Address:</strong>
    <%= form.text_field :customer_address %>
  </div>

  <div class="field">
    <strong>City:</strong>
    <%= form.text_field :customer_city %>
  </div>

  <div class="field">
    <strong>State:</strong>
    <%= form.text_field :customer_state %>
  </div>

  <div class="field">
    <strong>Zip Code:</strong>
    <%= form.text_field :customer_zip %>
  </div>

  <div class="actions" id="submit-btn">
    <%= form.submit %>
  </div>

  </div>
<% end %>
