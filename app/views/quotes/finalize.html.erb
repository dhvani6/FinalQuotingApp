<p id="notice"><%= notice %></p>

<h1>Finalize Quotes Page</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Markup Percentage</th>
      <th>Total Price</th>
      <th>Quote Date</th>
      <th>Finalize Date</th>
      <th>Sale Finalized</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.customer.customer_fname %></td>
        <td><%= quote.markup_percentage %></td>
        <td><%= quote.total_price %></td>
        <td><%= quote.quote_date %></td>
        <td><%= quote.finalize_date %></td>
        <td><%= quote.sale_finalized %></td>
        <td>

          <%= form_with(model: quote, local: true) do |form| %>
            <div class="field">
              <strong>Finalize Sale:</strong>
              <%= form.check_box :sale_finalized %>
            </div>

            <div class="actions">
              <%= form.submit %>
            </div>
          <% end %>

        </td>
        <td><%= link_to 'Show', quote %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
