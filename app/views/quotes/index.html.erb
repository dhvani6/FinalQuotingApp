<p id="notice"><%= notice %></p>

<h1>Quotes</h1>

<%= link_to 'New Quote', new_quote_path %>
<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Model</th>
      <th>Base Quote Price</th>
      <th>Total Price</th>
      <th>Quote Date</th>
      <th>Markup Percentage</th>
      <th>Finalize Date</th>
      <th>Sale Finalized</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.customer.customer_fname %></td>
        <td><%= quote.model %></td>
        <td><%= quote.base_quote_price %></td>
        <td><%= quote.total_price %></td>
        <td><%= quote.quote_date %></td>
        <td><%= quote.markup_percentage %></td>
        <td><%= quote.finalize_date %></td>
        <td><%= quote.sale_finalized %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Delete', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

