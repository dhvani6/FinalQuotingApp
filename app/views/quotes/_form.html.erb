<%= form_with(model: quote, local: true) do |form| %>
  <% if quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
      <% quote.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong>Customer:</strong>
    <%= form.collection_select :customer_id, Customer.all,:id,:customer_lname %>
  </div>

  <div class="field">
    <strong>Manufacturer:</strong>
    <%= form.collection_select :manufacturer_id, Manufacturer.all,:id,:manufacturer_name %>
  </div>

  <div class="field">
    <strong>Series:</strong>
    <%= form.collection_select :series_id, Series.all,:id,:series_number %>
  </div>


  <div class="field">
    <strong>Base Quote Price:</strong>
    <%= form.text_field :base_quote_price %>
  </div>

  <div class="field">
    <strong>Total Price:</strong>
    <%= form.text_field :total_price %>
  </div>

  <div class="field">
    <strong>Quote Date:</strong>
    <%= form.datetime_select :quote_date %>
  </div>

  <div class="field">
    <strong>Markup Percentage:</strong>
    <%= form.text_field :markup_percentage %>
  </div>

  <div class="field">
    <strong>Finalize Date:</strong>
    <%= form.datetime_select :finalize_date %>
  </div>

  <div class="field">
    <strong>Is the Sale Finalized?:</strong>
    <%= form.check_box :sale_finalized %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
